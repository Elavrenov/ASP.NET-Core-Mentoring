@using DAL.EF.Identity
@using Microsoft.AspNetCore.Identity 

@inject SignInManager<NorthwindUser> SignInManager 
@inject UserManager<NorthwindUser> UserManager 

@if(SignInManager.IsSignedIn(User)) 
{ 
<form  asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right"> 
    <ul class="nav navbar-nav navbar-right"> 
        <li> 
            <a asp-area="Identity" title="Manage">Hello @UserManager.GetUserName(User)!</a> 
        </li> 
        <li> 
            <button type="submit" asp-controller="Account" asp-action="LogOff" class="btn btn-danger navbar-btn">
                <div class="glyphicon glyphicon-off" style="margin: 1px;"></div>
            </button> 
        </li> 
    </ul> 
</form> 
} 
else 
{ 
<ul class="nav navbar-nav navbar-right"> 
    <li><a asp-area="Identity" asp-controller="Account" asp-action="Register" >
        Register
    </a></li> 
    <li><a asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a></li> 
</ul> 
}
