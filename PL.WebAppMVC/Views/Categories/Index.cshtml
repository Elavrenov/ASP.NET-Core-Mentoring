@model IEnumerable<BLL.CoreEntities.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h2>Northwind Categories</h2>

<div>
    <a class="btn bg-info" asp-action="Create">Create New</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayName("Functionality")
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @{
                    if (item.Picture != null)
                    {
                        <a asp-action="Image" asp-route-id="@item.CategoryId">
                            <img style='width: 110px; height: 80px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Picture))" />
                        </a>
                    }
                    else
                    {
                        <img style='width: 110px; height: 80px;' src="/Pictures/noData.jpeg" />
                    }
                }

            </td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Footers
{
    <footer>
        <p>
            <b>Users can’t edit categories.</b> <br/>
            &copy; 2019 - Epam.by
        </p>
    </footer>
}